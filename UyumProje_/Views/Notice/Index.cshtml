@model IEnumerable<UyumProje_.Models.Property>

@{
    ViewBag.Title = "Properties";
}

<h2>Properties</h2>

<div class="container">
    <div class="row">
        @foreach (var property in Model)
        {
            var image = property.Images.FirstOrDefault();
            var imageSrc = image != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(image.ImageData)}" : "~/path/to/default/image.jpg";

            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@imageSrc" class="card-img-top" alt="Image for @property.Title">
                    <div class="card-body">
                        <h5 class="card-title">@property.Title</h5>
                        <p class="card-text">@property.Description</p>
                        <p class="card-text">Price Per Night: @property.PricePerNight</p>
                        <p class="card-text">Category: @property.Category</p>
                        <p class="card-text">Max Number of Guests: @property.MaxNumberOfGuests</p>
                        <a href="@Url.Action("Details", "Notice", new { id = property.ID })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

