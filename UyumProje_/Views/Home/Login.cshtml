@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="singUpIn.css" rel="stylesheet">
</head>
<body>
    <div class="container" style="margin-top: 100px;">
        <div class="row justify-content-center">
            <div class="col-sm-4">
                <div class="card ">
                    <div class="card-header text-center">
                        Login
                    </div>
                    <div class="card-body">
                        <form action="~/Home/Login" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="username"
                                       name="Name" placeholder="Username" required> <br>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password"
                                       name="Password" placeholder="Password" required><br>
                            </div>
                            <button type="submit" class="btn btn-primary d-block mx-auto">Login</button>
                        </form>
                    </div>
                    <div style="margin:auto">
                        Create an Account <a href="@Url.Action("SignUp", "Home")">Sign Up</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
